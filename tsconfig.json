{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "@config": [
        "src/config/index"
      ],
      "@definitions": [
        "src/definition/index"
      ],
      "@dtos": [
        "src/dto/index"
      ],
      "@enums": [
        "src/enum/index"
      ],
      "@exceptions": [
        "src/exception/index"
      ],
      "@filters": [
        "src/filter/index"
      ],
      "@guards": [
        "src/guards/index"
      ],
      "@helpers": [
        "src/helper/index"
      ],
      "@interceptors": [
        "src/interceptor/index"
      ],
      "@interfaces": [
        "src/interface/index"
      ],
      "@mappers": [
        "src/mapper/index"
      ],
      "@middlewares": [
        "src/middleware/index"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@schemas": [
        "src/schema/index"
      ],
      "@utils": [
        "src/util/index"
      ],
    },
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}