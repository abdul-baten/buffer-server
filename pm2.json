{
  "apps": [
    {
      "name": "buffer-server",
      "script": "./dist/main.js",
      "instances": 1,
      "exec_mode": "cluster",
      "time": true,
      "watch": true,
      "autorestart": true,
      "timestamp": "YYYY-MM-DD HH:mm Z",
      "error_file": "./log/err.log",
      "out_file": "./log/out.log",
      "log_file": "./log/combined.log",
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development",
        "PORT": "4000"
      }
    }
  ]
}